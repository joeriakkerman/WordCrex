                              </VBox>
                              <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox style="-fx-background-color: #406e8e;">
                                       <children>
                                          <Region HBox.hgrow="ALWAYS" />
                                          <Label text="Niet actieve spellen" textFill="WHITE" HBox.hgrow="ALWAYS">
                                             <HBox.margin>
                                                <Insets bottom="5.0" top="5.0" />
                                             </HBox.margin>
                                          </Label>
                                          <Region HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <JFXListView fx:id="lvInactiveMatches" focusTraversable="false" style="-fx-padding: 0; -fx-background-insets: 0;" stylesheets="@../css/lvTegenstandersBeurt.css" VBox.vgrow="ALWAYS" />
                                 </children>
                              </VBox>
                              <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                                 <children>
                                    <HBox style="-fx-background-color: #8ea8c3;">
                                       <children>
                                          <Region HBox.hgrow="ALWAYS" />
                                          <Label text="Uitnodigingen" textFill="WHITE" HBox.hgrow="ALWAYS">
                                             <HBox.margin>
                                                <Insets bottom="5.0" top="5.0" />
                                             </HBox.margin>
                                          </Label>
                                          <Region HBox.hgrow="ALWAYS" />
                                       </children>
                                    </HBox>
                                    <HBox maxWidth="1.7976931348623157E308">
                                       <children>
                                          <JFXButton alignment="CENTER" focusTraversable="false" onMouseClicked="#btnCreateMatch" maxWidth="1.7976931348623157E308" style="-fx-background-color: #406e8e; -fx-border-color: #406e8e;" text="Nieuw spel maken" textAlignment="CENTER" textFill="WHITE" HBox.hgrow="ALWAYS">
