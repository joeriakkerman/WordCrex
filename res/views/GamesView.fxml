                                                <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="20" />
                                             </graphic>
                                             <font>
                                                <Font name="System Bold" size="16.0" />
                                             </font>
                                             <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                             </padding>
                                             <cursor>
                                                <Cursor fx:constant="HAND" />
                                             </cursor>
                                          </JFXButton>
                                       </children>
                                    </HBox>
                                    <HBox fx:id="imageBox" VBox.vgrow="ALWAYS">
                                       <children>
                                          <JFXListView fx:id="lvInvites" focusTraversable="false" style="-fx-padding: 0; -fx-background-insets: 0; -fx-background-color: #FFFFFF;" stylesheets="@../css/Uitnodigingen.css" HBox.hgrow="ALWAYS" />
